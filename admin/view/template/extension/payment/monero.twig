{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ wallet_address }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_monero_wallet_address" value="{{ payment_monero_wallet_address }}" placeholder="{{ wallet_address }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
         
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ wallet_host }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_monero_wallet_host" value="{{ payment_monero_wallet_host }}" placeholder="{{ wallet_host }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ wallet_port }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_monero_wallet_port" value="{{ payment_monero_wallet_port }}" placeholder="{{ wallet_port }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
         
         
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ monero_order_payment_status }}</label>
            <div class="col-sm-10">
              <select name="payment_monero_order_payment_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_monero_order_payment_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ monero_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_monero_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_monero_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ monero_status }}</label>
            <div class="col-sm-10">
              <select name="payment_monero_status" id="input-status" class="form-control">
                {% if payment_monero_status %}
                <option value="1" selected="selected">{{ monero_enable }}</option>
                <option value="0">{{ monero_disable }}</option>
                {% else %}
                <option value="1">{{ monero_enable }}</option>
                <option value="0" selected="selected">{{ monero_disable }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ monero_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_monero_sort_order" value="{{ payment_monero_sort_order }}" placeholder="{{ monero_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
